{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cppvsdbg",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/bin/cisc64",
            "args": [
                "src/test.s",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "build"
        },
        {
            "name": "emulator-lldb",
            "request": "launch",
            "type": "lldb",
            "program": "${workspaceFolder}/zig-out/bin/emulator",
            "stopOnEntry": false,
            "args": [
                "test",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"

        },
        {
            "name": "assembler-lldb",
            "request": "launch",
            "type": "lldb",
            "program": "${workspaceFolder}/zig-out/bin/casm",
            "stopOnEntry": false,
            "args": [
                "src/helloworld.s",
                "hello"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"

        }
    ]
}